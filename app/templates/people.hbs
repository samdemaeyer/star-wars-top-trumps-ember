<h2 class="mb-4 text-center">People</h2>
<div class="row mb-4">
  {{#each collection as |person i|}}
    <div class="col col-md-6">
      <h3 class="text-center">Wins: {{unless i leftWinCount rightWinCount}}</h3>
      <div class="card {{if person.hasBiggerMass "border-success"}}">
        <div class="card-body">
          <h4 class="card-title mb-2 text-muted">{{person.name}}</h4>
          <ul>
            <li class="font-weight-bold">Mass: {{person.mass}}</li>
            <li>Name: {{person.name}}</li>
            <li>Gender: {{person.gender}}</li>
            <li>Height: {{person.height}}</li>
            <li>Eye color: {{person.eye_color}}</li>
            <li>Hair color: {{person.hair_color}}</li>
            <li>Birth year: {{person.birth_year}}</li>
            <li>Skin color: {{person.skin_color}}</li>
          </ul>
        </div>
      </div>
    </div>
  {{/each}}
</div>

<RefreshBtn @shuffle={{action "shuffle"}}></RefreshBtn>
